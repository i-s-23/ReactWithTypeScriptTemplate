{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom"],
    "jsx": "react-jsx",
    "strict": true,
    "rootDirs": ["src"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
